<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <p>Name:<br>
                    {{ input type="text" value=name }}</p>

                <p>Email:<br>
                    {{ input type="text" value=email }}</p>

                <p>Zipcode:<br>
                    {{ input type="text" value=zip }}</p>
            </div>
            <div class="col-md-6">
                <p>Card number:<br>
                    {{ input type="text" value=cc_number }}</p>

                <p>Expiration date:<br>
                    {{ input type="text" value=exp }}</p>

                <p>Security code:<br>
                    {{ input type="text" value=cvv }}</p>
            </div>
        </div>
    </div>
</div>

<button class="btn btn-info btn-sm" {{ action "purchase" this }}>Purchase</button>